<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<script>
$(function () {
    $('#container').highcharts({
        title: {
            text: 'Average Corn Prices: Organic vs Conventional',
            x: -20 //center
        },
        subtitle: {
            text: 'Source: Mercaris Public Data',
            x: -20
        },
        xAxis: {
        type:"datetime"
        },
        yAxis: {
            title: {
                text: 'USD ($)'
            },
            plotLines: [{
                value: 0,
                width: 1,
                color: '#808080'
            }]
        },
        tooltip: {
            valuePrefix: '$'
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'middle',
            borderWidth: 0
        },
        series: [ 
        {
            name: "Organic",
            data: <%= @organicprices.map {|x| [(x.starting_time.to_datetime.to_i * 1000), x.average_price] }%>
        },  {
            name: "Conventional",
            data: <%= @conventionalprices.map {|x| [(x.starting_time.to_datetime.to_i * 1000), x.average_price] }%>
        }, 
        ]
    });
});
</script>

<div id="container" style="min-width: 310px; height: 400px; margin: 0 auto">

</div>
